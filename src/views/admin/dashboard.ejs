<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Shorty</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        .custom-scrollbar::-webkit-scrollbar { width: 6px; height: 6px; }
        .custom-scrollbar::-webkit-scrollbar-track { background: #f1f1f1; }
        .custom-scrollbar::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 10px; }
        .custom-scrollbar::-webkit-scrollbar-thumb:hover { background: #94a3b8; }
    </style>
</head>
<body class="bg-slate-50 min-h-screen font-sans text-slate-900">
    <!-- Navbar -->
    <nav class="bg-slate-900 border-b border-slate-800 sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <a href="/admin/dashboard" class="flex items-center space-x-2">
                        <div class="bg-blue-600 p-2 rounded-lg">
                            <i class="fas fa-link text-white text-xl"></i>
                        </div>
                        <span class="text-xl font-bold text-white">Shorty <span class="text-xs bg-blue-600 px-1.5 py-0.5 rounded ml-1 uppercase">Admin</span></span>
                    </a>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/admin/users" class="text-sm font-medium text-slate-300 hover:text-white transition-colors">Users</a>
                    <a href="/admin/reset" class="text-sm font-medium text-slate-300 hover:text-white transition-colors">Reset</a>
                    <a href="/admin/logout" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 transition-all">
                        <i class="fas fa-sign-out-alt mr-2"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Dashboard Header -->
        <div class="mb-8">
            <h2 class="text-2xl font-bold leading-7 text-slate-900 sm:text-3xl">Admin Dashboard</h2>
            <p class="mt-1 text-sm text-slate-500">Global overview of all shortened URLs and user activity.</p>
        </div>

        <!-- Quick Stats -->
        <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3 mb-8">
            <div class="bg-white overflow-hidden shadow rounded-xl border border-slate-200 p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-blue-100 rounded-lg p-3">
                        <i class="fas fa-link text-blue-600 text-xl"></i>
                    </div>
                    <div class="ml-5">
                        <dt class="text-sm font-medium text-slate-500 truncate">Total Links</dt>
                        <dd class="text-2xl font-bold text-slate-900"><%= urls.length %></dd>
                    </div>
                </div>
            </div>

            <div class="bg-white overflow-hidden shadow rounded-xl border border-slate-200 p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-green-100 rounded-lg p-3">
                        <i class="fas fa-mouse-pointer text-green-600 text-xl"></i>
                    </div>
                    <div class="ml-5">
                        <dt class="text-sm font-medium text-slate-500 truncate">Total Clicks</dt>
                        <dd class="text-2xl font-bold text-slate-900">
                            <%= urls.reduce((acc, url) => acc + url.visitHistory.length, 0) %>
                        </dd>
                    </div>
                </div>
            </div>

            <div class="bg-white overflow-hidden shadow rounded-xl border border-slate-200 p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-purple-100 rounded-lg p-3">
                        <i class="fas fa-users text-purple-600 text-xl"></i>
                    </div>
                    <div class="ml-5">
                        <dt class="text-sm font-medium text-slate-500 truncate">Creator Types</dt>
                        <dd class="text-sm font-bold text-slate-900">
                            Admins: <%= urls.filter(u => u.createdByType === 'Admin').length %> | 
                            Users: <%= urls.filter(u => u.createdByType === 'User').length %>
                        </dd>
                    </div>
                </div>
            </div>
        </div>

        <!-- Create URL Section (Admin) -->
        <div class="bg-white shadow rounded-xl border border-slate-200 mb-8 overflow-hidden">
            <div class="px-6 py-4 border-b border-slate-200 bg-slate-50">
                <h3 class="text-sm font-bold text-slate-700 uppercase tracking-wider">Quick Shorten</h3>
            </div>
            <div class="p-6">
                <% if (locals.error) { %>
                    <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded-r-lg">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <i class="fas fa-exclamation-circle text-red-500"></i>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-red-700 font-medium"><%= error %></p>
                            </div>
                        </div>
                    </div>
                <% } %>

                <form action="/url" method="POST" class="space-y-4">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="flex-1">
                            <label for="Url" class="block text-sm font-bold text-slate-700 mb-1">Destination URL</label>
                            <div class="relative rounded-md shadow-sm">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-slate-400">
                                    <i class="fas fa-link"></i>
                                </div>
                                <input type="url" name="Url" id="Url" required
                                    class="block w-full pl-10 pr-3 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm transition-all"
                                    placeholder="https://google.com">
                            </div>
                        </div>
                        <div class="flex-1">
                            <label for="customID" class="block text-sm font-bold text-slate-700 mb-1">Custom ID (Optional)</label>
                            <div class="relative rounded-md shadow-sm">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-slate-400">
                                    <i class="fas fa-at"></i>
                                </div>
                                <input type="text" name="customID" id="customID"
                                    class="block w-full pl-10 pr-3 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm transition-all"
                                    placeholder="admin-link">
                            </div>
                        </div>
                        <input type="hidden" name="redirect" value="/admin/dashboard">
                    </div>
                    <div class="flex justify-end">
                        <button type="submit" 
                            class="w-full sm:w-auto inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-bold rounded-lg shadow-sm text-white bg-blue-600 hover:bg-blue-700 transition-all">
                            Shorten
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Global URL List -->
        <div class="bg-white shadow rounded-xl border border-slate-200 overflow-hidden">
            <div class="px-6 py-5 border-b border-slate-200 flex items-center justify-between">
                <h3 class="text-lg font-bold text-slate-900">Global URL List</h3>
                <span class="bg-slate-100 text-slate-600 text-xs font-bold px-2.5 py-0.5 rounded-full">
                    <%= urls.length %> Items
                </span>
            </div>
            <div class="overflow-x-auto custom-scrollbar">
                <% if (locals.urls && urls.length > 0) { %>
                    <table class="min-w-full divide-y divide-slate-200">
                        <thead class="bg-slate-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">Short ID</th>
                                <th class="px-6 py-3 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">Original URL</th>
                                <th class="px-6 py-3 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">Created By</th>
                                <th class="px-6 py-3 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">Clicks</th>
                                <th class="px-6 py-3 text-right text-xs font-bold text-slate-500 uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-slate-200">
                            <% urls.forEach((url) => { %>
                                <tr class="hover:bg-slate-50 transition-colors">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <a href="/admin/analytics/<%= url.shortID %>" class="text-sm font-bold text-blue-600 font-mono hover:underline"><%= url.shortID %></a>
                                        <div class="mt-1">
                                            <a href="http://localhost:8000/<%= url.shortID %>" target="_blank" class="text-[10px] text-slate-400 hover:text-blue-600 uppercase font-bold tracking-tighter">Visit Link <i class="fas fa-external-link-alt ml-0.5"></i></a>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="text-sm text-slate-900 truncate max-w-xs" title="<%= url.originalUrl %>">
                                            <%= url.originalUrl %>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <% if (url.createdBy) { %>
                                            <div class="flex flex-col">
                                                <span class="text-sm font-bold text-slate-900">
                                                    <%= url.createdByType === 'Admin' ? url.createdBy.username : url.createdBy.name %>
                                                </span>
                                                <span class="text-xs text-slate-500"><%= url.createdByType === 'User' ? url.createdBy.email : 'System Admin' %></span>
                                                <span class="text-[10px] text-slate-400 uppercase tracking-wider font-semibold"><%= url.createdByType %></span>
                                            </div>
                                        <% } else { %>
                                            <span class="text-sm text-slate-400 italic">Unknown</span>
                                        <% } %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold bg-blue-100 text-blue-800">
                                            <%= url.visitHistory.length %>
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <div class="flex justify-end space-x-2">
                                            <a href="/admin/analytics/<%= url.shortID %>" class="text-blue-600 hover:text-blue-900 p-2 rounded-lg bg-blue-50 transition-colors" title="Analytics">
                                                <i class="fas fa-chart-bar"></i>
                                            </a>
                                            <a href="/admin/edit/<%= url.shortID %>" class="text-amber-600 hover:text-amber-900 p-2 rounded-lg bg-amber-50 transition-colors" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form id="delete-form-<%= url.shortID %>" action="/admin/delete/<%= url.shortID %>" method="POST" class="inline">
                                                <button type="button" onclick="confirmDelete('<%= url.shortID %>')" class="text-red-600 hover:text-red-900 p-2 rounded-lg bg-red-50 transition-colors" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <div class="px-6 py-12 text-center text-slate-500">
                        No URLs found.
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <footer class="bg-white border-t border-slate-200 py-8 mt-12">
        <div class="max-w-7xl mx-auto px-4 text-center text-sm text-slate-400">
            &copy; 2026 Shorty Admin Panel
        </div>
    </footer>

    <script>
        const Toast = Swal.mixin({
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true,
            didOpen: (toast) => {
                toast.addEventListener('mouseenter', Swal.stopTimer)
                toast.addEventListener('mouseleave', Swal.resumeTimer)
            }
        });

        window.addEventListener('DOMContentLoaded', () => {
            const urlParams = new URLSearchParams(window.location.search);
            const successMsg = urlParams.get('success');
            const errorMsg = urlParams.get('error');

            if (successMsg) {
                Toast.fire({
                    icon: 'success',
                    title: successMsg
                });
            }

            if (errorMsg) {
                Toast.fire({
                    icon: 'error',
                    title: errorMsg
                });
            }

            <% if (locals.error) { %>
                Toast.fire({
                    icon: 'error',
                    title: '<%= error %>'
                });
            <% } %>
        });

        function confirmDelete(shortID) {
            Swal.fire({
                title: 'Delete URL?',
                text: "This action cannot be undone!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById(`delete-form-${shortID}`).submit();
                }
            })
        }
    </script>
</body>
</html>
