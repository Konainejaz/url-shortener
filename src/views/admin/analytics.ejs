<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Analytics - Admin Console</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-slate-50 min-h-screen">
    <!-- Navigation -->
    <nav class="bg-slate-900 text-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <a href="/admin/dashboard" class="flex items-center space-x-3 group">
                        <div class="bg-blue-600 p-2 rounded-lg group-hover:bg-blue-500 transition-colors">
                            <i class="fas fa-shield-alt text-xl"></i>
                        </div>
                        <span class="font-bold text-xl tracking-tight">Admin Console</span>
                    </a>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/admin/dashboard" class="text-slate-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-colors">
                        <i class="fas fa-arrow-left mr-1"></i> Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Header Section -->
        <div class="mb-8">
            <div class="flex items-center space-x-3 mb-2">
                <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-xs font-bold uppercase tracking-wider">URL Analytics</span>
                <span class="text-slate-400">/</span>
                <span class="text-slate-600 font-mono font-medium"><%= url.shortID %></span>
            </div>
            <div class="mt-2 flex flex-col sm:flex-row sm:flex-wrap sm:space-x-6">
                <div class="mt-2 flex items-center text-sm text-slate-500">
                    <i class="fas fa-external-link-alt mr-1.5 text-slate-400"></i>
                    <a href="<%= url.originalUrl %>" target="_blank" class="hover:text-blue-600 truncate max-w-xs md:max-w-md"><%= url.originalUrl %></a>
                </div>
                <div class="mt-2 flex items-center text-sm text-slate-500">
                    <i class="fas fa-user mr-1.5 text-slate-400"></i>
                    <span>
                        <% if (url.createdByType === 'User' && url.createdBy) { %>
                            <%= url.createdBy.email %> (User)
                        <% } else if (url.createdByType === 'Admin') { %>
                            System Admin
                        <% } else { %>
                            Unknown
                        <% } %>
                    </span>
                </div>
            </div>
        </div>

        <!-- Stats Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-200">
                <div class="flex items-center justify-between mb-4">
                    <div class="bg-blue-50 text-blue-600 p-3 rounded-xl">
                        <i class="fas fa-mouse-pointer text-xl"></i>
                    </div>
                    <span class="text-xs font-bold text-green-500 bg-green-50 px-2 py-1 rounded-lg">+<%= url.visitHistory.length %> Total</span>
                </div>
                <h3 class="text-slate-500 text-sm font-medium">Total Clicks</h3>
                <p class="text-3xl font-bold text-slate-900 mt-1"><%= url.visitHistory.length %></p>
            </div>

            <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-200">
                <div class="flex items-center justify-between mb-4">
                    <div class="bg-indigo-50 text-indigo-600 p-3 rounded-xl">
                        <i class="fas fa-globe text-xl"></i>
                    </div>
                </div>
                <h3 class="text-slate-500 text-sm font-medium">Destination Host</h3>
                <p class="text-xl font-bold text-slate-900 mt-1 truncate" title="<%= url.originalUrl %>">
                    <%= new URL(url.originalUrl).hostname %>
                </p>
            </div>

            <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-200">
                <div class="flex items-center justify-between mb-4">
                    <div class="bg-amber-50 text-amber-600 p-3 rounded-xl">
                        <i class="fas fa-calendar-alt text-xl"></i>
                    </div>
                </div>
                <h3 class="text-slate-500 text-sm font-medium">Created On</h3>
                <p class="text-xl font-bold text-slate-900 mt-1">
                    <%= new Date(url.createdAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %>
                </p>
            </div>
        </div>

        <!-- Chart Section -->
        <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-200 mb-8">
            <h3 class="text-lg font-bold text-slate-900 mb-6 flex items-center">
                <i class="fas fa-chart-line mr-2 text-blue-600"></i>
                Click Activity Over Time
            </h3>
            <div class="h-[300px] w-full">
                <canvas id="clicksChart"></canvas>
            </div>
        </div>

        <!-- Visit History Table -->
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
            <div class="px-6 py-4 border-b border-slate-100 flex items-center justify-between bg-slate-50/50">
                <h3 class="text-lg font-bold text-slate-900">Visit History</h3>
                <span class="text-sm text-slate-500 font-medium">Recent Activity</span>
            </div>
            <div class="overflow-x-auto">
                <% if (url.visitHistory.length > 0) { %>
                    <table class="w-full text-left border-collapse">
                        <thead>
                            <tr class="bg-slate-50/50">
                                <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider w-20">S. No</th>
                                <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Timestamp</th>
                                <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider">User Agent</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-100">
                            <% url.visitHistory.slice().reverse().forEach((visit, index) => { %>
                                <tr class="hover:bg-slate-50/50 transition-colors">
                                    <td class="px-6 py-4 text-sm text-slate-400 font-medium">#<%= index + 1 %></td>
                                    <td class="px-6 py-4">
                                        <div class="flex flex-col">
                                            <span class="text-sm font-bold text-slate-900">
                                                <%= new Date(visit.timestamp).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %>
                                            </span>
                                            <span class="text-xs text-slate-500">
                                                <%= new Date(visit.timestamp).toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' }) %>
                                            </span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="text-sm text-slate-600 max-w-md truncate font-mono bg-slate-50 px-2 py-1 rounded border border-slate-100" title="<%= visit.userAgent %>">
                                            <%= visit.userAgent %>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <div class="p-12 text-center">
                        <div class="inline-flex items-center justify-center w-16 h-16 bg-slate-100 text-slate-400 rounded-full mb-4">
                            <i class="fas fa-history text-2xl"></i>
                        </div>
                        <h3 class="text-lg font-bold text-slate-900">No visits recorded</h3>
                        <p class="text-slate-500 mt-1">Traffic data will appear here once someone clicks the link.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <footer class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 border-t border-slate-200 mt-8">
        <p class="text-center text-sm text-slate-500">
            Â© 2026 URL Shortener Admin Console. All rights reserved.
        </p>
    </footer>

    <script>
        const visitData = <%- JSON.stringify(url.visitHistory) %>;
        
        // Group visits by date
        const visitsByDate = {};
        visitData.forEach(visit => {
            const date = new Date(visit.timestamp).toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
            visitsByDate[date] = (visitsByDate[date] || 0) + 1;
        });

        const labels = Object.keys(visitsByDate);
        const data = Object.values(visitsByDate);

        const ctx = document.getElementById('clicksChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Number of Clicks',
                    data: data,
                    borderColor: 'rgb(37, 99, 235)',
                    backgroundColor: 'rgba(37, 99, 235, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.4,
                    pointBackgroundColor: 'rgb(37, 99, 235)',
                    pointRadius: 4,
                    pointHoverRadius: 6
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: '#1e293b',
                        padding: 12,
                        titleFont: { size: 14, weight: 'bold' },
                        bodyFont: { size: 13 },
                        cornerRadius: 8
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        },
                        ticks: {
                            stepSize: 1
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });
    </script>
</body>
</html>